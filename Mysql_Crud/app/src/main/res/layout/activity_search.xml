<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DDDDDD"
    android:padding="10dp"
    tools:context=".SearchActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Search User"
        android:textColor="#B20600"
        android:gravity="center"
        android:textStyle="bold"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtSearchid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:hint="Enter UserId"
            android:textAllCaps="true"
            android:inputType="number"
            style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
            android:background="@color/white"
            android:textColor="#B20600"
            android:textColorHint="@color/purple_700"
            />
        <Button
            android:id="@+id/searchBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:text="Search"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/mycardView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#E9EFC0"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/purple_700"
                android:text="Details"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/txtSearchName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="10dp"
                android:text="Name"
                android:textColor="#F66B0E"
                android:textSize="22dp" />
            <TextView
                android:id="@+id/txtSearchEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginStart="5dp"

                android:layout_marginBottom="10dp"
                android:text="Email"
                android:textColor="#F66B0E"
                android:textSize="22dp" />
            <TextView
                android:id="@+id/txtSearchPass"
                android:layout_marginStart="5dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:layout_marginBottom="10dp"
                android:text="Password"
                android:textColor="#F66B0E"
                android:textSize="22dp" />
            <TextView
                android:id="@+id/txtSearchGender"
                android:layout_width="match_parent"
                android:layout_marginStart="5dp"

                android:layout_height="wrap_content"
                android:layout_marginTop="140dp"
                android:layout_marginBottom="10dp"
                android:text="Gender"
                android:textColor="#F66B0E"
                android:textSize="22dp" />

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</LinearLayout>